{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["mocha", "chai"]
  },
  "include": [
    "tests/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target"
  ]
}
