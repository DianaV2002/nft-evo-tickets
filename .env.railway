# Railway Backend Environment Variables
# Copy these values and set them using: railway variables --set KEY=value

# Solana Configuration
SOLANA_CLUSTER=devnet
RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=your_deployed_program_id_here

# Level System Configuration
LEVEL_PORT=3001
LEVEL_DB_PATH=/app/backend/level-system/database/level-system.db

# Pinata IPFS Configuration
PINATA_JWT=your_pinata_jwt_token_here
PINATA_GATEWAY=your-gateway.mypinata.cloud

# Security (CORS) - Update with your Vercel URL after deployment
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080,https://your-vercel-app.vercel.app

# Optional: Bundlr/Arweave Configuration
BUNDLR_SOLANA_SECRET_KEY_B58=your_bundlr_secret_key_here
